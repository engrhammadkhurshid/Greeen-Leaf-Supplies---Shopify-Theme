{{ 'gls-prefer-to-talk.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .section-{{ section.id }} .gls-talk-container {
    max-width: {{ section.settings.section_max_width }}px;
  }

  .section-{{ section.id }} .gls-talk-title {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
  }

  .section-{{ section.id }} .gls-talk-text {
    font-size: {{ section.settings.text_font_size }}px;
    color: {{ section.settings.text_color }};
  }

  .section-{{ section.id }} .gls-talk-content {
    font-size: {{ section.settings.content_font_size }}px;
    color: {{ section.settings.content_color }};
  }

  .section-{{ section.id }} .gls-talk-btn {
    font-size: {{ section.settings.btn_font_size }}px;
  }

  /* Phone Button Styles */
  .section-{{ section.id }} .gls-talk-btn-phone {
    background-color: {{ section.settings.phone_btn_bg }};
    color: {{ section.settings.phone_btn_text }};
    border-color: {{ section.settings.phone_btn_border }};
  }
  .section-{{ section.id }} .gls-talk-btn-phone:hover {
    background-color: {{ section.settings.phone_btn_hover_bg }};
    color: {{ section.settings.phone_btn_hover_text }};
  }

  /* Email Button Styles */
  .section-{{ section.id }} .gls-talk-btn-email {
    background-color: {{ section.settings.email_btn_bg }};
    color: {{ section.settings.email_btn_text }};
    border-color: {{ section.settings.email_btn_border }};
  }
  .section-{{ section.id }} .gls-talk-btn-email:hover {
    background-color: {{ section.settings.email_btn_hover_bg }};
    color: {{ section.settings.email_btn_hover_text }};
  }
{%- endstyle -%}

<div class="gls-talk-section section-{{ section.id }}-padding section-{{ section.id }}">
  <div class="gls-talk-container">
    
    <div class="gls-talk-header">
      {%- if section.settings.title != blank -%}
        <h2 class="gls-talk-title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <div class="gls-talk-text">{{ section.settings.text }}</div>
      {%- endif -%}
    </div>
    
    <div class="gls-talk-grid">
      <div class="gls-talk-left">
        {%- if section.settings.left_content != blank -%}
          <div class="gls-talk-content">{{ section.settings.left_content }}</div>
        {%- endif -%}
        
        <div class="gls-talk-buttons">
          {%- if section.settings.phone_number != blank -%}
            <a href="tel:{{ section.settings.phone_number }}" class="gls-talk-btn gls-talk-btn-phone">
              <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false" role="presentation"><path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56a.977.977 0 00-1.01.24l-2.2 2.2a15.05 15.05 0 01-6.59-6.59l2.2-2.21a.96.96 0 00.25-1.01A11.36 11.36 0 018.59 3.99C8.59 3.44 8.14 3 7.59 3H4.03C3.48 3 3 3.45 3 4.01 3 13.42 10.58 21 19.99 21c.56 0 1.01-.45 1.01-1v-3.61c0-.56-.45-1.01-1-1.01zM5.21 5h1.65c.18 1.13.37 2.24.59 3.32l-1.17 1.17C5.96 8.11 5.6 6.6 5.21 5zm13.79 13.79c-1.6 -.39-3.11-.75-4.49-1.08l1.17-1.17c1.08.22 2.19.41 3.32.59v1.66z"/></svg>
              {{ section.settings.phone_label | default: section.settings.phone_number }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.email_address != blank -%}
            <a href="mailto:{{ section.settings.email_address }}" class="gls-talk-btn gls-talk-btn-email">
              <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false" role="presentation"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
              {{ section.settings.email_label | default: section.settings.email_address }}
            </a>
          {%- endif -%}
        </div>
      </div>
      
      <div class="gls-talk-right">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 800 | image_tag: class: 'gls-talk-image', loading: 'lazy' }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'gls-talk-image' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

