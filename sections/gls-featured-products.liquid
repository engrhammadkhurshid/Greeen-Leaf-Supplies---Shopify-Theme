{{ 'gls-featured-products.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="gls-featured-products section-{{ section.id }}-padding">
  <div class="gls-featured-products__container page-width">
    <div class="gls-featured-products__header">
      <div>
        {%- if section.settings.heading != blank -%}
          {%- assign heading_tag = section.settings.heading_tag | default: 'h2' -%}
          <{{ heading_tag }} class="gls-featured-products__heading" style="font-size: {{ section.settings.heading_size }}px; color: {{ section.settings.heading_color }};">
            {{ section.settings.heading }}
          </{{ heading_tag }}>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          {%- assign subheading_tag = section.settings.subheading_tag | default: 'p' -%}
          <{{ subheading_tag }} class="gls-featured-products__subheading" style="font-size: {{ section.settings.subheading_size }}px; color: {{ section.settings.subheading_color }};">
            {{ section.settings.subheading }}
          </{{ subheading_tag }}>
        {%- endif -%}
      </div>
    </div>

    <div class="gls-featured-products__grid">
      {%- if section.settings.collection != blank -%}
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          {% render 'card-product', card_product: product %}
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..4) -%}
          {% render 'card-product' %}
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "GLS Featured Products",
  "tag": "section",
  "class": "gls-featured-products-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best Sellers"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our most popular packaging solutions."
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" },
        { "value": "p", "label": "Paragraph" },
        { "value": "span", "label": "Span" }
      ],
      "default": "h2"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 40
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "subheading_tag",
      "label": "Subheading Tag",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" },
        { "value": "p", "label": "Paragraph" },
        { "value": "span", "label": "Span" }
      ],
      "default": "p"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Subheading Font Size",
      "default": 18
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#666666"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 16,
      "step": 1,
      "default": 8,
      "label": "Products to Show"
    },
    {
      "type": "url",
      "id": "quote_link",
      "label": "Request Quote Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 80,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "default": 80,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "GLS Featured Products"
    }
  ]
}
{% endschema %}
