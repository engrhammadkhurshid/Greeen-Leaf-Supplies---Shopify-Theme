{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .blog-carousel-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: var(--card-corner-radius, 12px);
    overflow: hidden;
    background: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.08);
  }

  .blog-carousel-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .blog-carousel-card__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 66.66%; /* 3:2 Aspect Ratio */
    overflow: hidden;
  }

  .blog-carousel-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .blog-carousel-card:hover .blog-carousel-card__image {
    transform: scale(1.05);
  }

  .blog-carousel-card__content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .blog-carousel-card__title {
    margin: 0 0 1rem;
    font-size: 1.8rem;
    line-height: 1.3;
    font-weight: 600;
  }
  
  .blog-carousel-card__title a {
    text-decoration: none;
    color: currentColor;
  }

  .blog-carousel-card__excerpt {
    font-size: 1.4rem;
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.75);
    margin-bottom: 2rem;
    flex-grow: 1;
  }

  .blog-carousel-card__footer {
    margin-top: auto;
  }

  .blog-carousel-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-size: 1.4rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    background-color: rgba(var(--color-button), var(--alpha-button-background));
    color: rgb(var(--color-button-text));
  }

  .blog-carousel-btn:hover {
    background-color: rgba(var(--color-button), 0.9);
    transform: translateY(-2px);
  }

  .blog-carousel__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .blog-carousel__tagline {
    font-size: 1.6rem;
    color: rgba(var(--color-foreground), 0.75);
    margin-top: 1rem;
    display: block;
  }
{%- endstyle -%}

<div class="blog-carousel section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.tagline != blank -%}
      <div class="blog-carousel__header">
        {%- if section.settings.heading != blank -%}
          <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.tagline != blank -%}
          <span class="blog-carousel__tagline">{{ section.settings.tagline }}</span>
        {%- endif -%}
      </div>
    {%- endif -%}

    <slider-component class="slider-mobile-gutter{% if section.settings.enable_desktop_slider %} slider-component-desktop{% endif %}">
      <ul
        class="grid grid--1-col grid--2-col-tablet grid--{{ section.settings.columns_desktop }}-col-desktop slider slider--tablet grid--peek{% if section.settings.enable_desktop_slider %} slider--desktop{% endif %}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}
          {%- for article in section.settings.blog.articles limit: section.settings.post_limit -%}
            <li
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="grid__item slider__slide scroll-trigger animate--slide-in"
              style="--animation-order: {{ forloop.index }};"
            >
              <div class="blog-carousel-card">
                {%- if article.image -%}
                  <div class="blog-carousel-card__image-wrapper">
                    <img
                      srcset="{{ article.image | image_url: width: 300 }} 300w, {{ article.image | image_url: width: 600 }} 600w"
                      src="{{ article.image | image_url: width: 600 }}"
                      alt="{{ article.image.alt | escape }}"
                      class="blog-carousel-card__image"
                      loading="lazy"
                      width="{{ article.image.width }}"
                      height="{{ article.image.height }}"
                    >
                  </div>
                {%- endif -%}
                
                <div class="blog-carousel-card__content">
                  <h3 class="blog-carousel-card__title">
                    <a href="{{ article.url }}">{{ article.title | truncate: 50 }}</a>
                  </h3>
                  
                  <div class="blog-carousel-card__excerpt">
                    {%- if article.excerpt.size > 0 -%}
                      {{ article.excerpt | strip_html | truncatewords: 20 }}
                    {%- else -%}
                      {{ article.content | strip_html | truncatewords: 20 }}
                    {%- endif -%}
                  </div>

                  <div class="blog-carousel-card__footer">
                    <a href="{{ article.url }}" class="blog-carousel-btn">
                      {{ 'blogs.article.read_more' | t | default: "Read Article" }}
                    </a>
                  </div>
                </div>
              </div>
            </li>
          {%- endfor -%}
        {%- else -%}
           {%- for i in (1..3) -%}
            <li class="grid__item slider__slide">
               <div class="blog-carousel-card">
                 <div class="blog-carousel-card__image-wrapper">
                   {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                 </div>
                 <div class="blog-carousel-card__content">
                   <h3 class="blog-carousel-card__title">Example Article Title</h3>
                   <div class="blog-carousel-card__excerpt">This is an example excerpt for the blog post card. It shows what the content will look like.</div>
                   <div class="blog-carousel-card__footer">
                     <a href="#" class="blog-carousel-btn">Read Article</a>
                   </div>
                 </div>
               </div>
            </li>
           {%- endfor -%}
        {%- endif -%}
      </ul>
      
      <div class="slider-buttons no-js-hidden{% unless section.settings.enable_desktop_slider %} large-up-hide{% endunless %}">
        <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
        <div class="slider-counter caption">
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total">{{ section.settings.post_limit }}</span>
        </div>
        <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
      </div>
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "Blog Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "post_limit",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6,
      "label": "Number of posts to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "enable_desktop_slider",
      "label": "Enable slider on desktop",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest News"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Stay updated with our latest articles"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Blog Carousel",
      "settings": {
        "blog": "News",
        "post_limit": 3
      }
    }
  ]
}
{% endschema %}