{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .gls-featured-about-container {
    max-width: {{ section.settings.max_width }}px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .gls-featured-about-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .gls-featured-about-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .gls-featured-about-image-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .gls-featured-about-image {
    width: {{ section.settings.image_scale }}%;
    height: auto;
    object-fit: {{ section.settings.image_fit }};
    display: block;
    max-width: 100%;
    border-radius: 8px;
  }

  .gls-featured-about-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .gls-featured-headline {
    font-size: {{ section.settings.headline_size }}px;
    color: {{ section.settings.headline_color }};
    text-align: {{ section.settings.headline_alignment }};
    margin: 0;
    line-height: 1.2;
    font-weight: bold;
  }

  .gls-featured-tagline {
    font-size: {{ section.settings.tagline_size }}px;
    color: {{ section.settings.tagline_color }};
    text-align: {{ section.settings.tagline_alignment }};
    margin: 0;
    line-height: 1.5;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }};">
  <div class="gls-featured-about-container">
    <div class="gls-featured-about-grid">
      <div class="gls-featured-about-image-wrapper">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1000 | image_tag:
            class: 'gls-featured-about-image',
            loading: 'lazy'
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg gls-featured-about-image' }}
        {%- endif -%}
      </div>
      <div class="gls-featured-about-content">
        <{{ section.settings.headline_tag }} class="gls-featured-headline">
          {{ section.settings.headline_text }}
        </{{ section.settings.headline_tag }}>
        
        <{{ section.settings.tagline_tag }} class="gls-featured-tagline">
          {{ section.settings.tagline_text }}
        </{{ section.settings.tagline_tag }}>
      </div>
    </div>
  </div>
</div>

