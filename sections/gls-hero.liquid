{% style %}
/* ========================================
   GLS Hero Slider - Fresh Build
   Green Leaf Supplies Theme
======================================== */

.gls-hero {
  position: relative;
  width: 100%;
  height: 100vh;
  min-height: 500px;
  max-height: 800px;
  overflow: hidden;
  background: #060316;
}

/* ----------------------------------------
   Slider Container
---------------------------------------- */
.gls-hero__slider {
  position: relative;
  width: 100%;
  height: 100%;
}

/* ----------------------------------------
   Individual Slide
---------------------------------------- */
.gls-hero__slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.8s ease, visibility 0.8s ease;
}

.gls-hero__slide.active {
  opacity: 1;
  visibility: visible;
  z-index: 1;
}

/* ----------------------------------------
   Background Image
---------------------------------------- */
.gls-hero__bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.gls-hero__slide.active .gls-hero__bg {
  animation: zoomIn 8s ease-out forwards;
}

@keyframes zoomIn {
  from { transform: scale(1); }
  to { transform: scale(1.08); }
}

/* ----------------------------------------
   Dark Overlay
---------------------------------------- */
.gls-hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #060316;
  z-index: 1;
}

/* ----------------------------------------
   Content
---------------------------------------- */
.gls-hero__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  width: 100%;
  max-width: 900px;
  padding: 0 24px;
  text-align: center;
  color: #fff;
}

/* Badge */
.gls-hero__badge {
  display: inline-block;
  background: #7AAE5C;
  color: #fff;
  padding: 8px 20px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1.5px;
  border-radius: 50px;
  margin-bottom: 24px;
}

.gls-hero__slide.active .gls-hero__badge {
  animation: fadeUp 0.6s ease 0.1s both;
}

/* Title */
.gls-hero__title {
  font-size: 36px;
  font-weight: 700;
  line-height: 1.1;
  margin: 0 0 20px;
  color: #fff;
}

.gls-hero__slide.active .gls-hero__title {
  animation: fadeUp 0.6s ease 0.2s both;
}

@media (min-width: 768px) {
  .gls-hero__title {
    font-size: 52px;
  }
}

@media (min-width: 1024px) {
  .gls-hero__title {
    font-size: 64px;
  }
}

/* Highlight */
.gls-hero__highlight {
  display: block;
  color: #7AAE5C;
  margin-top: 8px;
}

/* Description */
.gls-hero__text {
  font-size: 16px;
  line-height: 1.7;
  color: rgba(255, 255, 255, 0.85);
  max-width: 600px;
  margin: 0 auto 32px;
}

.gls-hero__slide.active .gls-hero__text {
  animation: fadeUp 0.6s ease 0.3s both;
}

@media (min-width: 768px) {
  .gls-hero__text {
    font-size: 18px;
  }
}

/* ----------------------------------------
   Buttons
---------------------------------------- */
.gls-hero__buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
  justify-content: center;
  align-items: center;
}

.gls-hero__slide.active .gls-hero__buttons {
  animation: fadeUp 0.6s ease 0.4s both;
}

@media (min-width: 500px) {
  .gls-hero__buttons {
    flex-direction: row;
    gap: 16px;
  }
}

.gls-hero__btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 180px;
  padding: 16px 32px;
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
  border-radius: 6px;
  transition: all 0.3s ease;
}

.gls-hero__btn--primary {
  background: #7AAE5C;
  color: #fff;
  border: 2px solid #7AAE5C;
}

.gls-hero__btn--primary:hover {
  background: #FDC15F;
  border-color: #FDC15F;
  color: #060316;
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(253, 193, 95, 0.3);
}

.gls-hero__btn--secondary {
  background: transparent;
  color: #fff;
  border: 2px solid rgba(255, 255, 255, 0.4);
}

.gls-hero__btn--secondary:hover {
  background: #fff;
  border-color: #fff;
  color: #060316;
  transform: translateY(-3px);
}

/* ----------------------------------------
   Navigation
---------------------------------------- */
.gls-hero__nav {
  position: absolute;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 20px;
}

/* Arrows */
.gls-hero__arrow {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  color: #fff;
  cursor: pointer;
  transition: all 0.3s ease;
}

.gls-hero__arrow:hover {
  background: #7AAE5C;
  border-color: #7AAE5C;
}

@media (max-width: 600px) {
  .gls-hero__arrow {
    display: none;
  }
}

/* Dots */
.gls-hero__dots {
  display: flex;
  gap: 10px;
}

.gls-hero__dot {
  width: 12px;
  height: 12px;
  background: rgba(255, 255, 255, 0.3);
  border: none;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 0;
}

.gls-hero__dot:hover {
  background: rgba(255, 255, 255, 0.6);
}

.gls-hero__dot.active {
  background: #7AAE5C;
  transform: scale(1.2);
}

/* ----------------------------------------
   Animation
---------------------------------------- */
@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
{% endstyle %}

<section class="gls-hero" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.autoplay_speed }}">
  
  <!-- Slider -->
  <div class="gls-hero__slider">
    {% for block in section.blocks %}
      <div class="gls-hero__slide {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        
        <!-- Background -->
        {% if block.settings.bg_image != blank %}
          <img 
            class="gls-hero__bg" 
            src="{{ block.settings.bg_image | image_url: width: 1920 }}" 
            alt="{{ block.settings.bg_image.alt | default: 'Hero background' }}"
            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
          >
        {% endif %}
        <div class="gls-hero__overlay" style="opacity: {{ block.settings.overlay | divided_by: 100.0 }};"></div>
        
        <!-- Content -->
        <div class="gls-hero__content">
          {% if block.settings.badge != blank %}
            <span class="gls-hero__badge">{{ block.settings.badge }}</span>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h1 class="gls-hero__title">
              {{ block.settings.title }}
              {% if block.settings.title_highlight != blank %}
                <span class="gls-hero__highlight">{{ block.settings.title_highlight }}</span>
              {% endif %}
            </h1>
          {% endif %}
          
          {% if block.settings.text != blank %}
            <p class="gls-hero__text">{{ block.settings.text }}</p>
          {% endif %}
          
          <div class="gls-hero__buttons">
            {% if block.settings.btn1_text != blank %}
              <a href="{{ block.settings.btn1_link }}" class="gls-hero__btn gls-hero__btn--primary">
                {{ block.settings.btn1_text }}
              </a>
            {% endif %}
            {% if block.settings.btn2_text != blank %}
              <a href="{{ block.settings.btn2_link }}" class="gls-hero__btn gls-hero__btn--secondary">
                {{ block.settings.btn2_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
  <!-- Navigation -->
  {% if section.blocks.size > 1 %}
    <div class="gls-hero__nav">
      <button class="gls-hero__arrow gls-hero__arrow--prev" aria-label="Previous">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
      </button>
      <div class="gls-hero__dots">
        {% for block in section.blocks %}
          <button class="gls-hero__dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}" aria-label="Slide {{ forloop.index }}"></button>
        {% endfor %}
      </div>
      <button class="gls-hero__arrow gls-hero__arrow--next" aria-label="Next">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
      </button>
    </div>
  {% endif %}
</section>

<script>
(function() {
  const hero = document.querySelector('.gls-hero');
  if (!hero) return;
  
  const slides = hero.querySelectorAll('.gls-hero__slide');
  const dots = hero.querySelectorAll('.gls-hero__dot');
  const prevBtn = hero.querySelector('.gls-hero__arrow--prev');
  const nextBtn = hero.querySelector('.gls-hero__arrow--next');
  
  if (slides.length <= 1) return;
  
  let current = 0;
  let timer = null;
  const autoplay = hero.dataset.autoplay === 'true';
  const speed = parseInt(hero.dataset.speed) || 5000;
  
  function show(index) {
    slides.forEach((s, i) => {
      s.classList.toggle('active', i === index);
    });
    dots.forEach((d, i) => {
      d.classList.toggle('active', i === index);
    });
    current = index;
  }
  
  function next() {
    show((current + 1) % slides.length);
  }
  
  function prev() {
    show((current - 1 + slides.length) % slides.length);
  }
  
  function startTimer() {
    if (autoplay) {
      timer = setInterval(next, speed);
    }
  }
  
  function stopTimer() {
    clearInterval(timer);
  }
  
  if (prevBtn) prevBtn.addEventListener('click', () => { stopTimer(); prev(); startTimer(); });
  if (nextBtn) nextBtn.addEventListener('click', () => { stopTimer(); next(); startTimer(); });
  
  dots.forEach((dot, i) => {
    dot.addEventListener('click', () => { stopTimer(); show(i); startTimer(); });
  });
  
  hero.addEventListener('mouseenter', stopTimer);
  hero.addEventListener('mouseleave', startTimer);
  
  // Touch support
  let startX = 0;
  hero.addEventListener('touchstart', e => { startX = e.touches[0].clientX; }, { passive: true });
  hero.addEventListener('touchend', e => {
    const diff = startX - e.changedTouches[0].clientX;
    if (Math.abs(diff) > 50) {
      stopTimer();
      diff > 0 ? next() : prev();
      startTimer();
    }
  }, { passive: true });
  
  startTimer();
})();
</script>

